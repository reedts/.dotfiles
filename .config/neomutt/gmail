##############
# Configuration for GMail account
#
#
set mbox_type = Maildir
set spoolfile = +gmail/INBOX
unset record
set postponed = +gmail/Drafts

set realname = "Julian Bigge"
set from = "j.reedts@gmail.com"
set my_user = j.reedts@gmail.com
unset signature

# SMTP
set smtp_pass = `gpg2 --batch -q --decrypt ~/.neomutt/gmail.gpg`
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com

# This variable specifies the default Notmuch database in format:
# notmuch://<absolute path>
set nm_default_uri = "notmuch:///home/reedts/.mail/gmail"
set query_command = "notmuch-addrlookup --config=/home/reedts/.mail/gmail/.notmuch-config --mutt '%s'"
