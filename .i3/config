		inactive_workspace	#121212	#121212	#808080
		urgent_workspace	#121212	#121212	#F92672
	}
    strip_workspace_numbers yes
	output HDMI-0
    separator_symbol "  "
	position top 
	tray_output HDMI-0
	font pango:Droid Sans Mono 8
        #status_command i3status --config /home/reedts/.i3/i3status.conf
	status_command $HOME/.i3/conkywrapper
}

