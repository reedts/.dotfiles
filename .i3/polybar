[colors]
background = #2e3440
background-trans = #ee2e3440
background-active-trans = #ccbf616a
background-mode-trans = #ccb48ead
background-enable-trans = #cca3be8c
background-disable-trans = #ccbf616a
foreground = #d8dee9
foreground-inactive = #9999AA

black       = #3b4252
red         = #bf616a
green       = #a3be8c
yellow      = #ebcb8b
blue        = #81a1c1
purple      = #b48ead
cyan        = #88c0d0
light_grey  = #e5e9f0
dark_grey   = #4c566a
light_red   = #bf616a
light_green = #a3be8c
light_yellow= #ebcb8b
light_blue  = #81a1c1
light_purple= #a3be8c
light_cyan  = #8fbcbb
white       = #eceff4


[bar/primary]
monitor = HDMI-0
width = 100%
height = 27
offset-x = 0
offset-y = 0
;radius = 6.0
fixed-center = false

background = ${colors.background-trans}
foreground = ${colors.foreground}

line-size = 3
;line-color = #f00

border-size = 0
;border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 2

font-0 = Droid Sans Mono:size=8;1
font-1 = FontAwesome:size=10;1

modules-left = i3
modules-center = mpd xwindow
modules-right = cpu memory eth date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
tray-background = #2e3440

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/secondary]
inherit = bar/primary
monitor = DVI-I-1

modules-left = i3
modules-center = xwindow
modules-right = 

tray-position = 

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-padding = 5

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

label-focused = %name%
label-focused-background = ${colors.background-active-trans}
label-focused-underline= ${colors.light_red}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.light_grey}
label-empty-padding = 2

index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background-mode-trans}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.blue}
label-visible-underline = ${colors.cyan}
label-visible-padding = ${self.label-focused-padding}


[module/mpd]
type = internal/mpd

format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>
format-online-padding = 3
format-online-background = #eeFD971F

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 40
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-foreground = ${colors.foreground}
;format-background = ${colors.light_red}
format-underline = ${colors.light_red}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-foreground = ${colors.foreground}
;format-background = ${colors.blue}
format-underline = ${colors.blue}
label = %percentage_used%%


[module/eth]
type = internal/network
interface = enp9s0
interval = 3.0

;format-connected-background = ${colors.background-enable-trans}
;format-connected-underline = ${colors.light_green}
format-connected-prefix = " "
format-connected-foreground = ${colors.foreground}
format-connected-underline = ${colors.light_green}
label-connected = %local_ip%

;format-disconnected = ${colors.light_grey}
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${colors.red}
;format-disconnected-background = ${colors.background-disable-trans}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-foreground = ${colors.foreground}
format-underline = ${colors.purple}


label = %date% %time%


[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.blue}
label-close = cancel
label-close-foreground = ${colors.blue}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

