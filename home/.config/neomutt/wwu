############
# Configuration for WWU account
#
#
set mbox_type = Maildir
set spoolfile = +wwu/INBOX
set record = +wwu/Sent
set postponed = +wwu/Drafts
set trash = +wwu/Trash


# Identity
set realname = "Julian Bigge"
set from = "julian.bigge@uni-muenster.de"
set my_user = 'j_bigg01'
set signature = "~/.config/neomutt/.wwu_signature"
set smime_default_key = "0x641F8B3A"


# SMTP
set smtp_pass = `gpg2 --batch -q --decrypt ~/.neomutt/wwu.gpg`
set smtp_url = "smtp://$my_user@secmail.uni-muenster.de:587"

# This variable specifies the default Notmuch database in format:
# notmuch://<absolute path>
set nm_default_uri = "notmuch:///home/reedts/.mail/wwu"

# Enable address-query
set query_command = "neomutt-address-nm --config /home/reedts/.mail/wwu/.notmuch-config '%s'"
