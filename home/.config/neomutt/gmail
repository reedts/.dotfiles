##############
# Configuration for GMail account
#
#
set mbox_type = Maildir
set folder = "~/.mail/gmail"
set spoolfile = +INBOX
unset record
set postponed = +Drafts
set trash = +Trash

set realname = "Julian Bigge"
set from = "j.reedts@gmail.com"
set my_user = "j.reedts@gmail.com"
unset signature

# SMTP
set ssl_force_tls = yes
set smtp_pass = `pass email/gmail/neomutt | head -n1`
set smtp_url=smtps://$my_user@smtp.gmail.com

# This variable specifies the default Notmuch database in format:
# notmuch://<absolute path>
set nm_default_uri = "notmuch:///home/julian/.mail/gmail"
set query_command = "neomutt-address-nm --config /home/julian/.mail/gmail/.notmuch-config '%s'"
