############
# Configuration for qubeto account
#
#
set mbox_type = Maildir
set folder = "~/.mail/qubeto"
set spoolfile = +INBOX
set record = +Sent
set postponed = +Drafts
set trash = +Trash


# Identity
set realname = "Julian Bigge"
set from = "bigge@qubeto.de"
set my_user = 'm052cc73'
set signature = "~/.config/neomutt/.qubeto_signature"


# SMTP
set smtp_pass = `pass qubeto/mail/m052cc73 | head -n1`
set smtp_url = "smtps://$my_user:$smtp_pass@w019c0bc.kasserver.com:465"

# This variable specifies the default Notmuch database in format:
# notmuch://<absolute path>
set nm_default_uri = "notmuch:///home/julian/.mail/qubeto"

# Enable address-query
set query_command = "neomutt-address-nm --config /home/julian/.mail/qubeto/.notmuch-config '%s'"
